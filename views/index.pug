doctype html
html(lang="en")
	head
		include head
		link(rel="stylesheet", href="/css/subgeneral.css")
	body
		h1 Mi ferreteria
		div(class="mdl-card mdl-shadow--2dp center")
			div(class="mdl-card__title")
				h2(class="mdl-card__title-text") Imagen
			div(class="mdl-card__supporting-text")
				div(class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label")
					input(class="mdl-textfield__input", id="user")
					label(class="mdl-textfield__label" for="user") Usuario
					span(class="mdl-textfield__error")
				div(class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label")
					input(class="mdl-textfield__input", id="pass")
					label(class="mdl-textfield__label" for="pass") Contrase&ntilde;a
					span(class="mdl-textfield__error")
			div(class="mdl-card__action center")
				button(class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored", onclick="validateLogin();") INGRESAR
		include script
		script(src="/js/jslogin.js")
